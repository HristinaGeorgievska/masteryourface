# ── Contentful (client-side — exposed via envPrefix in vite.config.ts) ────────
# These are Delivery API (read-only, public content) credentials.
# Set in Vercel dashboard AND locally in .env for dev.
CONTENTFUL_SPACE_ID=
CONTENTFUL_ACCESS_TOKEN=

# ── SMTP (server-side only — used by /api/contact) ─────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
CONTACT_EMAIL=

# ── Anti-spam HMAC token (server-side only — used by /api/token + /api/contact)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FORM_TOKEN_SECRET=
